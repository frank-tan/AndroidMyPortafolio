<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- A CardView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/project_image"
                android:src="@drawable/android_multicolor"
                android:contentDescription="project image"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignParentBottom="false"
                android:adjustViewBounds="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/project_name"
                android:layout_alignLeft="@+id/project_image"
                android:layout_alignRight="@+id/project_image"
                android:layout_alignBottom="@+id/project_image"
                android:text="Popular Movies"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="#1F000000"
                android:textColor="#FFFFFF"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/project_description"
                android:layout_below="@+id/project_image"
                android:layout_alignParentLeft="true"
                android:text="A popular movies app"
                android:layout_margin="10dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>